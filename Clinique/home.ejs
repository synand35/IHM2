</head>
<body>
<div >
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <img src="img/logo1.jpg" alt="" width="45px">
          <a class="navbar-brand" href="#">Synand Clinique</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link bi bi-calendar-week" aria-current="page" href="/planing"> Planing </a>
              </li>
              <li class="nav-item">
                <a class="nav-link active bg-secondary rounded-3 text-light bi bi-question-square" href="/home"> Demande</a>
              </li>
              <li class="nav-item">
                <a class="nav-link bi bi-envelope-exclamation" href="/notification"> Notification</a>
              </li>
            </ul>
            <div>
              <button class="btn"><%= email %></button>

          </div>
          <a href="/deconnection" type="button" class="btn btnLogin bi bi-box-arrow-right" id="btnLogin"> Se deconnecter</a>

          </div>
        </div>
      </nav>
      <div class="container">
          <div >
            <div class="navbar">
                <div class="navbar-brand titre">
                    <h3>Votre rendez-vous</h3>
                </div>
                <button class="btn bi bi-calendar-plus" id="btnAjouter"> Ajouter </button>
            </div>

        </div>
          <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Num rdv</th>
                    <th scope="col" style="display: none;">Demandeur</th>
                    <th scope="col">Date de rdv</th>
                    <th scope="col">Heure de rdv</th>
                    <th scope="col">Motif</th>
                    <th scope="col">Etat</th>
                    <th style="display: none;">idUser</th>
                    <th style="display: none;">email</th>
                    <th style="display: none;">date1</th>
                    <th style="display: none;">heure1</th>
                    <th style="display: none;">date2</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                        <%for(i=0;i< result.length;i++){ %>
                  <tr>
                    <th scope="row"><%=i+1%></th>
                    <td><%= result[i].id %></td>
                    <td style="display: none;"> <%= result[i].nom %></td>
                    <td><%= result[i].date %></td>
                    <td><%= result[i].heure %></td>
                    <td><%= result[i].motif %></td>
                    <td><%= result[i].etat %></td>
                    <td style="display: none;"><%= result[i].idUser %></td>
                    <td style="display: none;"><%= result[i].email %></td>
                    <td style="display: none;"><%= result[i].date1 %></td>
                    <td style="display: none;"><%= result[i].heure1 %></td>
                    <td style="display: none;"><%= result[i].date2 %></td>
                    <td> <button class="btnDetails bi bi-justify-left" type="submit">  Details</button></td>
                  </tr>
                        <% } %>
                </tbody>
              </table>
        </div>
        
      </div>
</div>

  <!-- Modal pour le Details -->

