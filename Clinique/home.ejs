</body>
<!-- Modal pour le creation de rendez-vous -->
<div class="modal" tabindex="-1" id="modalAdd">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title">Inscrpition</h6>
        <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close" id="closeModalAdd1"></button>
      </div>
      <div class="modal-body">
        <form action="addRdvUser" method="post" class="needs-validation" novalidate>           
          <div class="mb-3">
            <input type="text" class="form-control" style="display: none;" id="id" name="id"  placeholder="" value="<%=id %>">
            <div class="valid-feedback">
                Please provide a valid zip.
              </div>
        </div>
              <div class="mb-3">
                  <label for="validationCustom01" class="form-label">Motif</label>
                 <select class="form-control"  name="motif" id="motif">
                  <option value="Consulation Generale">Consulation Generale</option>
                  <option value="Consulation Specialise">Consulation Specialise</option>
                  <option value="Suivi medical">Suivi medical</option>
                  <option value="Examen de routine">Examen de routine"</option>
                  <option value="Vaccination">Vaccination</option>
                  <option value="Controle de Sante">Controle de Sante</option>
                  <option value="Probleme Specifique">Probleme Specifique</option>
                 </select>
              </div>

              <div class="mb-3">
                  <label for="validationCustom01" class="form-label">date</label>
                  <input type="date" class="form-control" id="date" name="date"   required>
                  <div class="valid-feedback">
                      Please provide a valid zip.
                    </div>
              </div>

              <div class="mb-3">
                  <label for="validationCustom01" class="form-label">Heure</label>
                  <select class="form-control" name="heure" id="heure">
                    <option value="08:00">08:00</option>
                    <option value="09:00">09:00</option>
                    <option value="10:00">10:00</option>
                    <option value="11:00">11:00</option>
                    <option value="13:00">13:00</option>
                    <option value="14:00">14:00</option>
                    <option value="15:00">15:00</option>

                  </select>
              </div>
                  
              <button type="submit" class="btn btn-primary">Enregistrer</button>
               <button type="button" class="btn btn-secondary " data-bs-dismiss="modal" id="closeModalAdd">Fermer</button>

        </form>
      </div>
    </div>
  </div>
</div>

<script>
    var btnAjouter=document.getElementById("btnAjouter");
    var ModalAjouter=document.getElementById("modalAdd");
    btnAjouter.onclick=function(){
        ModalAjouter.style.display="block"
    }
    var btnCloseModalAdd=document.getElementById("closeModalAdd");
    btnCloseModalAdd.onclick=function(){
        ModalAjouter.style.display="none"
    }
    var btnCloseModalAdd=document.getElementById("closeModalAdd1");
    btnCloseModalAdd.onclick=function(){
        ModalAjouter.style.display="none"
    }

    var btnDetails=document.getElementsByClassName("btnDetails");
var modalDetails=document.getElementById("modalDetails");
var closeModalDetails=document.getElementById("closeModalDetails");
var closeModalDetails1=document.getElementById("closeModalDetails1");
 for(i=0;i<btnDetails.length;i++){
  btnDetails[i].onclick=function(){
                      modalDetails.style.display="block";
                        var row = $(this).closest("tr");
                        var cells = row.find("td");
                        // Tableau pour stocker les valeurs de toutes les cellules
                        var valeursCellules = [];
        
                        // Itérer sur les cellules et stocker les valeurs
                        cells.each(function(index) {
                            var contenuCellule = $(this).text();
                            // Stocker la valeur dans le tableau valeursCellules
                            valeursCellules[index] = contenuCellule;
                        });
        
                        // Accéder aux valeurs individuelles
                        var idRdv = valeursCellules[0];
                        var idClient = valeursCellules[1];
                        var date = valeursCellules[2];
                        var heure = valeursCellules[3];
                        var motif = valeursCellules[4];
                        var etat = valeursCellules[5];
                        var IdUser = valeursCellules[6];
                        var email = valeursCellules[7];
                        var date1 = valeursCellules[8];
                        var heure1 = valeursCellules[9];
                        var date2 = valeursCellules[10];
        
                        // $("#champId").val(idRdv);
                        // $("#champId2").val(idRdv);
                       document.getElementById("numero").innerHTML=idRdv;
                       document.getElementById("numCli").innerHTML=idClient;
                       document.getElementById("date0").innerHTML=date;
                       document.getElementById("heure0").innerHTML=heure;
                       document.getElementById("etat").innerHTML=etat;
                       document.getElementById("idUser").innerHTML=IdUser;
                       document.getElementById("email").innerHTML=email;
                       document.getElementById("motif0").innerHTML=motif;
                       document.getElementById("date1").innerHTML=date1;
                       document.getElementById("heure1").innerHTML=heure1;
                       document.getElementById("date2").innerHTML=date2;

                      //  console.log(date+heure)
  }
}
closeModalDetails.onclick=function(){
  modalDetails.style.display="none";
}
closeModalDetails1.onclick=function(){
  modalDetails.style.display="none";
}
</script>
</html>